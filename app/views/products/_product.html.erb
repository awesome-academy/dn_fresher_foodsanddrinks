<div class="col-md-3 col-sm-6">
  <div class="product-grid">
    <div class="product-image">
      <%= link_to product do %>
        <% if product.images.present? %>
          <%= image_tag(product.images.first.image_url, alt: :food, class: "pic-1") %>
        <% else %>
          <%= image_tag("default.jpg", alt: :default) %>
        <% end %>
      <% end %>
    </div>
    <div class="product-content">
      <h3 class="title"><a href="#"><%= product.name %></a></h3>
      <div class="price"><%= number_to_currency product.price %></div>
    </div>
    <ul class="social">
      <li>
        <%= link_to product, class: "btn btn-success" do %>
          <span class="fa fa-search"><%= t "home.view" %></span>
        <% end %>
      </li>
      <li>
        <%= form_tag(carts_path, method: :post) do  %>
          <%= hidden_field_tag(:product_id, product.id) %>
          <%= hidden_field_tag(:quantity, 1) %>
          <%= button_tag(type: "submit", class: "btn btn-danger button") do %>
            <i class="fa fa-shopping-cart"> <%= t "home.cart" %></i>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
