<% provide(:title, t("user.change_pass")) %>
<% provide(:base_title, t("base.title")) %>

<h2 class="text-center"><%= t "user.change_pass" %></h2>
<div class="col-md-6 col-md-offset-3">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.label :password, t("user.new_pass") %><br />
    <% if @minimum_password_length %>
      <em>
        (<%= @minimum_password_length %> <%= t("user.minimum") %>)
      </em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>

    <%= f.label :password_confirmation, t("user.verify") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>

    <%= f.submit t("user.change_pass"), class: "btn btn-primary"  %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
