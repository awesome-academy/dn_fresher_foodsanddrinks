<%= render "shared/error_messages", object: f.object %>
<div class="form-group">
  <%= f.label :name, t("product.name1") %>
  <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :category, t("product.category") %>
  <%= f.collection_select(:category_id, @categories, :id, :name, {include_blank: false}, class: "form-control") %>
</div>
<div class="form-group">
  <%= f.label :price, t("product.price") %>
  <%= f.text_field :price, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :quantity, t("product.quantity") %>
  <%= f.number_field :quantity, min: 0, class: "form-control" %>
</div>
<% if @new %>
  <div class="form-group">
    <%= f.fields_for :images do |p| %>
      <%= f.label :image, t("product.image") %> <br>
      <%= p.file_field :image, multiple: true, name: "images[image_url][]", class: "form-control upload-image", accept: Settings.uploaders.image.accept %> <br>
    <% end %>
    <div id="preview"></div>
  </div>
<% end %>
<div class="form-group">
  <%= f.label :information, t("product.information") %>
  <%= f.text_area :information, class: "form-control", rows: "5" %>
</div>
<%= f.submit yield(:button_text), class: "btn btn-primary" %>
<hr>
