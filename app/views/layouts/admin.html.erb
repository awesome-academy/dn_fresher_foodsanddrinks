<!DOCTYPE html>
<html>
<head>
  <title><%= full_title((yield :title), (yield :base_title))%></title>
  <%= render "layouts/rails_default" %>
</head>
<body>
  <%= render "admin/dashboard/admin_header" %>
  <div class="container">
    <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>">
      <%= message %>
    </div>
    <% end %>
    <div class="col-md-3 sidebar">
      <%= render "admin/dashboard/admin_sidebar" %>
    </div>
    <div class="col-md-9 content">
      <%= yield %>
    </div>
  </div>
</body>
</html>

