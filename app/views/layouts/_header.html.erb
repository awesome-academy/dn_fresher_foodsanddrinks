<div class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <%= link_to "MC-SHOP", root_path, id: "logo" %>
      <ul class="nav navbar-nav navbar-right">
        <li class="form-inline">
          <%= form_tag(search_path, method: :get) do %>
            <%= text_field_tag :keyword, @keyword, class: "form-control search", placeholder: t("search.text") %>
            <%= button_tag(type: "submit", class: "btn btn-dark button btn1") do %>
            <i class="fa fa-search"></i>
          <% end %>
        <% end %>
        </li>
        <li class="active">
          <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home"></span> <%= t("home.name") %>
          <% end %>
        </li>

        <li><%= link_to t("header.contact"), "#" %></li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t("header.language") %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("header.english"), locale: :en %></li>
            <li><%= link_to t("header.vietnamese"), locale: :vi %></li>
          </ul>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t("header.categories") %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% @categories.each do |category| %>
              <li><%= link_to category.name, category %></li>
            <% end %>
          </ul>
        </li>

          <li>
            <%= link_to carts_path do %>
              <span class="glyphicon glyphicon-shopping-cart"></span> <%= t("header.cart") %>
            <% end %>
          </li>
        <% if logged_in? %>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t("header.account") %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% if user_admin? %>
              <li><%= link_to t("admin.page"), admin_root_path %></li>
            <% end %>
            <li><%= link_to t("user.profile"), current_user %></li>
            <li><%= link_to t("user.settings"), current_user %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("user.logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
        <% else %>
          <li>
            <%= link_to login_path do %>
              <span class="glyphicon glyphicon-user"></span> <%= t("header.account") %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
